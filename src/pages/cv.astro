          </article>
          </article>
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
  .hover{
    color: #9349B9;
  }

  .hover-text-java:hover::after {
  content: " (Spring et Junit)";
  }
  .hover-text-java:hover {
    color: blue;
  }

  .hover-text-py:hover::after {
  content: " (in progress)";
  }
  .hover-text-py:hover {
    color: blue;
  }

  .hover-text-ruby:hover::after {
  content: " (Rspec, Ruby on Rails)";
  }
  .hover-text-ruby:hover {
    color: blue;
  }

  .hover-text-js:hover::after {
  content: " (cypress et cucumber)";
  }
  .hover-text-js:hover {
    color: blue;
  }

	.cv {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.cv {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.cv > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}
</style>
